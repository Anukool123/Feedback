<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivFloatingButton"
        android:layout_width="@dimen/com_sdk_feedback_icon_width"
        android:layout_height="@dimen/com_sdk_feedback_icon_height"
        android:background="@drawable/floatingbutton"/>
    <TextView
        android:id="@+id/tvFloatingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/ivFloatingButton"
        android:layout_alignLeft="@id/ivFloatingButton"
        android:text="10"
        android:textColor="@android:color/white"
        android:textSize="@dimen/com_sdk_feedback_text_size_small"
        android:textStyle="bold"
        android:background="@drawable/badge_circle"/>
</RelativeLayout>